%h1 edit card
= form_for @card do |f|
        =f.label      :name
        %br
        =f.text_field :name
        %br
        =f.label      :description
        %br
        =f.text_area  :description
        %br
        =f.label      :image_path
        %br
        =f.select     :image_path, options_for_select(images_for_cards_options)
        %br
        =f.label      :group
        %br
        =f.select     :group_id, options_for_select(Group.all.map{|g| [g.name, g.id]})
        %br
        %br
        =submit_tag "update"