%div{:id => "grid#{@group.id}"}
    .toolbar
        = link_to "Back", nil, :class => "back"
        %h1= @group.name
        = link_to "Groups", "#home", :class => "button"

    .mosaic_grid

        - @cards.each do |card|
            = link_to image_tag(card.image_path.to_s), card_path(card), :class=>"slideleft mosaic_thumb"
